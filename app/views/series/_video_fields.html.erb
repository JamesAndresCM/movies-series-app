<div class="form-group nested-fields">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control", required: true %>
  <%= f.label :video %>

  <% if f.object.video.file %>
        
        <p><%= f.object.video.file.filename %></p>
       
  <% else %>
    <%= f.file_field :video, class: "form-control", required: true %>
  <% end %>
  
  <%= link_to_remove_association "Remove Video", f, {class: "mb-2 badge badge-pill badge-danger"} %>
</div>