
<div class="mt-3 style-chapter">
  <h3 style="text-transform: capitalize; padding: 10px; color: white">
    <%= @series.name %>
    <span style="float: right;">
      <%= series_links(@series) %>
    </span>
  </h3>
</div>
<div class="card color-chapter">
  <div class="container mt-3">
  <div class="container col-md-5 mb-4" style="float: left;">
    <img class="img img-fluid article-img img-class-style" src="<%= @series.img %>">
  </div>
  <div class="container col-md-6 mb-2" style="float: right; display: inline-block; color: white">
    <span class="mt-2"><h4>Sinopsis</h4></span>
    <p class="card-text" style="text-align: justify;">
      <%= sanitize(@series.description) %>
    </p>
    Category <span class="badge badge-pill badge-primary"><%= @series.serie_capitalize %></span>
    <br>
    Release date <span class="badge badge-pill badge-success"><%= @series.release %></span>
    <br>
    <%= @series.total_videos %>
  </div>
  </div>
</div>
<div class="card-body">
  <%= @series.series_tags %>
</div>


<%= @series.chapters %>

<div class="container mt-3 mb-3 color-chapter" style="margin: 0 auto;">
  <br>
  <% @series.videos.each.with_index(1) do |video,index| %>
  <ol class="breadcrumb breadcrumb-dot">
    <li class="breadcrumb-item">
      <span class="badge badge-pill badge-primary">
        <%= index %>
      </span>
    </li>
    <li class="breadcrumb-item">Name
      <span class="badge badge-pill badge-dark">
        <%= video.name %>
      </span>
    </li>
    <li class="breadcrumb-item">Duration
      <span class="badge badge-pill badge-dark">
        <%= video.duration %>
      </span>
    </li>
    <li class="breadcrumb-item">Resolution
      <span class="badge badge-pill badge-dark">
        <%= video.resolution %>
      </span>
    </li>
    <li class="breadcrumb-item">
      <a href="<%= series_video_path(@series.slug, video,:page => index) %>" class="badge badge-success">
        Show <%= @series.movie_serie %>
      </a>
    </li>
  </ol>
   <% end %>
<br>
</div>
 
      